# ==========================================================
# TEMPLATE DI CONFIGURAZIONE PER POKER MANAGER
# (da copiare in .env.local o .env.production)
# ==========================================================

# ----------------------------
# FLASK
# ----------------------------
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Backend storage rate-limiter
FLASK_LIMITER_STORAGE=memory://

# Secret key per sessioni Flask
SECRET_KEY=CHANGE_ME

# ----------------------------
# DATABASE
# ----------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=poker_manager

# Versione locale (senza Docker)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@127.0.0.1:5432/${POSTGRES_DB}

# ----------------------------
# REDIS
# ----------------------------
REDIS_URL=redis://127.0.0.1:6379/0
