{
  "name": "poker-tournament-app",
  "version": "5.0.0",
  "description": "Asset management per Poker App 5.0 (SASS, Linting)",
  "scripts": {
    "start": "python run.py",
    "start:py-dev": "flask --app run run",
    "build": "npm run clean && npm run build:css",
    "build:css": "sass app/static/scss:app/static/css --no-source-map --style=compressed",
    "clean": "rimraf app/static/css",
    "watch:css": "sass --load-path=./node_modules --load-path=./app/static/scss --watch app/static/scss:app/static/css",
    "lint:css": "stylelint 'app/static/scss/**/*.scss'",
    "lint:css-fix": "stylelint 'app/static/scss/**/*.scss' --fix",
    "dev": "npm-run-all --parallel watch:css start:py-dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "sass": "^1.90.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.4.0"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "limiter": "^3.0.0"
  }
}
